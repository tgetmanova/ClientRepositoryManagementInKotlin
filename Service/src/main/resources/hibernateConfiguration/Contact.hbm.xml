<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.github.spb.tget.demo.data.ContactEntity" table="Contacts">

        <meta attribute="class-description">
            This class contains the Contacts detail.
        </meta>

        <id name="contactId" type="int" column="ContactID">
            <generator class="native"/>
        </id>

        <property name="phone" column="PhoneNumber" type="string"/>
        <property name="email" column="Email" type="string"/>
        <property name="address" column="Address" type="string"/>

        <many-to-one name="client" class="com.github.spb.tget.demo.data.ClientEntity" fetch="select">
            <column name="ClientID" not-null="true"/>
        </many-to-one>

    </class>

</hibernate-mapping>